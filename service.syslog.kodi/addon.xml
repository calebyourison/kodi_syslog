<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="service.syslog.kodi"
       name="Kodi Remote Logs"
       version="0.1.0"
       provider-name="Caleb Yourison">

    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
    </requires>

    <extension point="xbmc.service"
               library="service.py"
               start="startup" />

    <extension point="xbmc.addon.metadata">
        <summary lang="en">Kodi Remote Logs</summary>
        <description lang="en">Read the local log file and forward new lines to a local syslog server via UDP. The original format is preserved. Optionally add preceding tag text.</description>
        <platform>all</platform>
    </extension>
</addon>